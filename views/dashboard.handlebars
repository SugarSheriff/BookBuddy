<div class="row">
    <div class="dashboard-welcome">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>


<div class="row mt-4">
    <div class="dashboard-box">
        {{!-- Create a Book List section --}}
        <h3>Create a new Book List:</h3>

        <p>This section will be for future development. <br>Click this block-text to navigate to the home page to search for books.</p>
    </div>

    {{!-- Saved Book List section --}}
    {{#if savedBookList.length}}
    <div class="col-md-6 project-list">
        <h3>My Posts:</h3>

        {{#each savedBookList as |blogPost|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/blogPost/{{savedBookList.id}}">{{savedBookList.title}}</a></h4>
            </div>
            <div class="col-md-2">
                <a href="/blogPost/update/{{savedBookList.id}}"><button class="btn btn-sm btn-info" id="update-btn" data-id="{{savedBookList.id}}">UPDATE</button></a>
            </div>
            <div class="col-md-2">
                <button class="btn btn-sm btn-danger del-btn" data-id="{{savedBookList.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/dashboard.js"></script>